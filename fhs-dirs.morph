{
    "name": "fhs-dirs",
    "kind": "chunk",
    "decription": "create the FHS 2.3 directory hierarchy (bootstrap edition)",
    "install-commands": [
        "./create-fhs-dirs \"$DESTDIR\"",
        "mknod -m 600 \"$DESTDIR/dev/console\" c 5 1",
        "mknod -m 666 \"$DESTDIR/dev/null\" c 1 3",
        "echo baserock > \"$DESTDIR\"/etc/hostname"
    ]
}
